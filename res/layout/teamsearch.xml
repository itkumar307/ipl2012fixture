<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:background="@drawable/cricketbg" android:orientation="vertical">
		<LinearLayout android:id="@+id/linearLayout1"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout android:id="@+id/linearLayout2"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:orientation="vertical" android:padding="4dip">

						<com.scilla.text.HelveticaBold
								android:id="@+id/menu_searchtext" android:layout_width="wrap_content"
								android:layout_height="wrap_content" android:text="Searched By"
								android:layout_gravity="center" android:textColor="@color/popupdialogheadcolor" />

						<View android:id="@+id/view1" android:layout_width="wrap_content"
								android:layout_height="1dip" android:layout_marginTop="2dip"
								android:background="@color/disabled" />

				</LinearLayout>
				<com.scilla.text.HelveticaBold
						android:id="@+id/menu_team" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:text="BY team"
						android:paddingTop="2dip" android:textColor="@color/popupdialogheadcolor" />
				<LinearLayout android:id="@+id/linearLayout8"
						android:layout_marginTop="5dip" android:layout_width="match_parent"
						android:layout_height="wrap_content">

						<Spinner android:id="@+id/spinner1" android:layout_weight="1"
								android:layout_width="wrap_content" android:prompt="@string/TEAM"
								android:layout_height="wrap_content"></Spinner>
						<Button android:text="Search" android:id="@+id/button1"
								android:layout_weight="1" android:layout_width="wrap_content"
								android:layout_height="wrap_content"></Button>

				</LinearLayout>
				<com.scilla.text.HelveticaBold
						android:id="@+id/menu_team1_vs_team2" android:layout_width="wrap_content"
						android:paddingTop="2dip" android:layout_height="wrap_content"
						android:text="Team1 vs Team2" android:textColor="@color/popupdialogheadcolor" />
				<LinearLayout android:id="@+id/linearLayout8"
						android:layout_width="match_parent" android:layout_marginTop="5dip"
						android:layout_height="wrap_content">
						<Spinner android:id="@+id/spinner2" android:layout_width="wrap_content"
								android:layout_weight="1" android:prompt="@string/TEAM1"
								android:layout_height="wrap_content"></Spinner>
						<TextView android:text="Vs" android:id="@+id/textView1"
								android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
						<Spinner android:id="@+id/spinner3" android:layout_weight="1"
								android:prompt="@string/TEAM" android:layout_width="wrap_content"
								android:layout_height="wrap_content"></Spinner>
						<Button android:text="Search" android:id="@+id/button2"
								android:layout_weight="1" android:layout_width="wrap_content"
								android:layout_height="wrap_content"></Button>

				</LinearLayout>
				<LinearLayout android:id="@+id/linearLayout7"
						android:layout_width="match_parent" android:layout_height="wrap_content"
						android:orientation="vertical" android:padding="4dip">

						<com.scilla.text.HelveticaBold
								android:id="@+id/textView3" android:layout_width="wrap_content"
								android:layout_height="wrap_content" android:text="Team Schedule"
								android:layout_gravity="center" android:textColor="@color/popupdialogheadcolor" />

						<View android:id="@+id/view1" android:layout_width="wrap_content"
								android:layout_height="1dip" android:layout_marginTop="2dip"
								android:background="@color/disabled" />
				</LinearLayout>
		</LinearLayout>
		<ListView android:id="@+id/android:list"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:dividerHeight="1px" />
		<com.google.ads.AdView android:id="@+id/ad"
				xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
				android:gravity="bottom" android:layout_width="wrap_content"
				android:layout_height="wrap_content" ads:adSize="BANNER"
				ads:adUnitId="a14f7f0879adda5" ads:loadAdOnCreate="true" />
</LinearLayout>